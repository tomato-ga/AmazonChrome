{
    "manifest_version": 3,
    "name": "amazonScraping",
    "version": "0.22",
    "description": "Auto Crawl Amazon Pages",
    "permissions": [
        "tabs",
        "webNavigation",
        "webRequest",
        "storage"
    ],
    "host_permissions": [
        "https://www.amazon.co.jp/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "images/amazonlogo.png"
      }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        },
        {
            "matches": ["*://www.amazon.co.jp/*/dp/*"],
            "js": ["amazonContentScript.js"]
        },
        {
          "matches": ["*://www.amazon.co.jp/*/deal/*"],
          "js": ["amazonDealContentScript.js"]
        }
    ]
}
